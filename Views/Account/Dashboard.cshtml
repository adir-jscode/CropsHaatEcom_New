                    </div>
                  </div>
                </div>
                <!-- Total Revenue -->
                <div class="col-12 col-lg-18 order-2 order-md-3 order-lg-2 mb-4">
                  <div class="card">
                      <h5 class="card-header m-0 me-2 pb-3">All Orders</h5>

                      <div class="table-responsive text-nowrap">
                  <table class="table">
                    <thead class="table-light">
                      <tr>
                        <th>Order ID</th>
                        <th>Date Time</th>
                        <th>Total Amount</th>
                        <th>Payment Method</th>
                        <th>Status</th>
                        <th>View Order</th>
                        <th>Payment Actions</th>
                      </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                      
                         @foreach(OrderssModel orderss in Model.Orders){
                            <tr>
                             <td>@orderss.OrderID</td>
                             <td>@orderss.OrderDateTime</td>
                             <td>৳ @orderss.GrandTotal</td>
                             <td>@orderss.PaymentMode</td>
                            <td>
                                @if(orderss.Status=="Order Placed")
								{
									<span class="badge bg-label-primary">Order Placed</span>
								}
								@if(orderss.Status=="Order Confirmed")
								{
									<span class="badge bg-label-secondary">Order Confirmed</span>
								}

								@if(orderss.Status=="In Transit")
								{
									<span class="badge bg-label-info">In Transit</span>
								}
								@if(orderss.Status=="success")
								{
									<span class="badge bg-label-success">Delivered</span>
								}


                                <!--Bkash Payment Gatway erros-->
                                @if(orderss.Status=="BKash Payment Error")
								{
									<span class="badge bg-label-danger">BKash Payment Error</span>
								}
                                @if(orderss.Status=="BKash Payment failure")
								{
									<span class="badge bg-label-danger">Payment failure</span>
								}
                                @if(orderss.Status=="BKash Payment Cancelled")
								{
									<span class="badge bg-label-danger">Payment Cancelled</span>
								}
                                
                                <!--Card Payment Gatway erros-->
                                @if(orderss.Status=="Card Payment Cancelled")
								{
									<span class="badge bg-label-danger">Card Payment Cancelled</span>
								}
                                @if(orderss.Status=="Card Payment Declined")
								{
									<span class="badge bg-label-danger">Card Payment Declined</span>
								}
                               



                             </td>
                            <td> <a href="~/Account/Trackorder/@orderss.OrderID" class="btn btn-sm btn btn-outline-info">View Details</a></td>
                         <td>
                        @if(
                        (
                            (@orderss.PaymentMode=="Bkash"|| orderss.PaymentMode=="Card")&&
                            (@orderss.Status=="Order Placed"||@orderss.Status=="Order Confirmed"||@orderss.Status=="In Transit"||@orderss.Status=="success")
                        
                        )   
                        ||
                        (
                        
                        (@orderss.PaymentMode=="Cash On Delivery")&&
                            (@orderss.Status=="Order Confirmed"||@orderss.Status=="In Transit"||@orderss.Status=="success")
                        
                        )
                        
                        
                        
                        
                        )
                        {
                            <button disabled class="btn btn-sm btn-success">Payment Not Allowed</button>
                                                           
                        }else{
                            
                            <a  asp-controller="CheckOut" asp-action="PaymentCreator"  asp-route-OrderID="@orderss.OrderID" asp-route-GrandTotal="@orderss.GrandTotal" asp-route-ipg="Bkash" class="btn btn-sm btn-outline-primary"><img src="~/assets/img/bKashIcon.png" /></a>
                             <a   asp-controller="CheckOut" asp-action="PaymentCreator"  asp-route-OrderID="@orderss.OrderID" asp-route-GrandTotal="@orderss.GrandTotal" asp-route-ipg="CityBank" class="btn btn-sm btn-outline-primary" ><img src="~/assets/img/cardIcon.png" /></a>
                           
                        }
                                                        
                         </td>
                        </tr>
                        }
                     
                     
                    </tbody>
                  </table>
                </div>
                    
                  </div>
                </div>
                <!--/ Total Revenue -->
              
          

